{
  "version": 2,
  "github": {
    "enabled": true
  },
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "demo/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "portal/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "portal/**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "portal/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "images/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/demo",
      "dest": "/demo/index.html"
    },
    {
      "src": "/demo/(.*)",
      "dest": "/demo/$1"
    },
    {
      "src": "/portal",
      "dest": "/portal/index.html"
    },
    {
      "src": "/portal/(.*)",
      "dest": "/portal/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
